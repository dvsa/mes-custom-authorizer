{
  "name": "mes-custom-authorizer",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "Authorization for access to MES microservices",
  "homepage": "https://github.com/dvsa/mes-custom-authorizer#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-custom-authorizer"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan",
    "comp-test": "cucumber-js component-tests/ --require build/component-tests/**/*.js",
    "test": "npm run compile && jasmine && npm run comp-test",
    "test:jasmine-coverage": "nyc npm run test",
    "start": "npm run compile && sls dynamodb install && sls offline start"
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.1.4",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.93",
    "@types/chai": "^4.3.0",
    "@types/cucumber": "^6.0.1",
    "@types/jasmine": "^3.10.3",
    "@types/node": "^14.17.5",
    "@types/node-fetch": "^2.6.1",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk": "^2.1084.0",
    "aws-sdk-mock": "^5.6.2",
    "chai": "^4.3.6",
    "cucumber": "^6.0.5",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^1.3.1",
    "jasmine": "^3.99.0",
    "jasmine-spec-reporter": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "serverless": "^1.83.3",
    "serverless-dotenv-plugin": "^2.4.2",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^4.10.6",
    "serverless-webpack": "^5.6.1",
    "sinon": "^11.1.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.2.7",
    "ts-node": "^10.6.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typemoq": "^2.1.0",
    "typescript": "^4.6.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run security-scan && npm run lint && npm test",
      "pre-commit": "run-s lint:fix lint compile-no-emit"
    }
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-custom-authorizer/issues"
  }
}
