{
  "name": "mes-custom-authorizer",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "Authorization for access to MES microservices",
  "homepage": "https://github.com/dvsa/mes-custom-authorizer#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-custom-authorizer"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "comp-test": "cucumber-js component-tests/ --require build/component-tests/**/*.js",
    "test": "npm run compile && jasmine && npm run comp-test",
    "test:jasmine-coverage": "nyc npm run test",
    "start": "npm run compile && sls dynamodb install && sls offline start",
    "prepare": "husky install"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.0.1",
    "node-fetch": "^2.6.6"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "@types/aws-lambda": "^8.10.120",
    "@types/chai": "^4.3.6",
    "@types/jasmine": "^4.3.5",
    "@types/node": "^20.6.0",
    "@types/node-fetch": "^2.6.4",
    "@types/sinon": "^10.0.16",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^6.7.0",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk": "^2.1455.0",
    "aws-sdk-mock": "^5.8.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jasmine": "^5.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "serverless": "^3.34.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^12.0.4",
    "serverless-webpack": "^5.13.0",
    "sinon": "^15.2.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-custom-authorizer/issues"
  }
}
