{
  "rules": {
    "no-duplicate-variable": true,
    "no-unused-variable": false,
    "no-console": [true],
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "max-line-length": [true, 120],
    "deprecation": true
  },
  "extends": "tslint-config-airbnb",
  "linterOptions": {
    "exclude": [ "spec/**/*.ts" ]
  }
}
